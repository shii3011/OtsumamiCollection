{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Go API Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/src/otsumami-server",
      "envFile": "${workspaceFolder}/.env.development",
      "showLog": true
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Start React Dev Server",
      "command": "npm start",
      "cwd": "${workspaceFolder}/src/client"
    },
    {
    "type": "chrome",
    "request": "launch",
    "name": "Launch Chrome against localhost",
    "url": "http://localhost:3000",
    "webRoot": "${workspaceFolder}/src/client",
    "runtimeExecutable": "stable" // ← または絶対パス
    }
  ],
  "compounds": [
    {
      "name": "Dev All: Go + React + Chrome",
      "configurations": [
        "Debug Go API Server",
        "Start React Dev Server",
        "Launch Chrome against localhost"
      ]
    }
  ]
}
